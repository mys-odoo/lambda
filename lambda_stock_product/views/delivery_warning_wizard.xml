<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_stock_picking_wizard_lambda" model="ir.ui.view">
        <field name="name">stock.picking.delivery.warning.form</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <form string="Confirm Details">
                <group>
                    <field name="move_ids_without_package">
                        <tree
                            string="Products"
                            editable="top"
                            create="false"
                        >
                            <header>The following product(s) had their prices changed. Please check off the product(s) that should conform to their price change. Those that remained unchecked will keep their unit price.</header>
                            <field name="product_id" readonly="1"/>
                            <field name="weight"/>
                            <field name="volume"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                    </field>
                    <label for="carrier_id" string="Whatâ€™s the shipping method for this order?"/>
                    <field name="carrier_id"/>
                    <field name="company_id" invisible="1"/>
                </group>
                <footer>
                    <button name="action_save_then_validate" string="Save" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>