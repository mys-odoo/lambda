<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_inherit_lambda" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.lambda</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//field[@name='qty_received']" position="after">
                    <field name="qty_returned" attrs="{'column_invisible': [('parent.state', 'not in', ('purchase', 'done'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>